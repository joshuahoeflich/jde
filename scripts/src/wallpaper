#!/bin/sh
VERSION=1.0.0
WALLPAPER_PATH="$HOME/pictures/wallpaper/*"

usage()
{
cat <<EOF
WALLPAPER

USAGE
wallpaper                 Set a new, completely random wallpaper.

FLAGS
--help, -h:        Display this help message and exit.
--version, -v:     Display the current version and exit.

EOF
}

case "$1" in
    --help|-h)
        usage
        exit 0
    ;;
    --version|-v)
        printf "%s\n" "$VERSION"
        exit 0
    ;;
    *)
        # Do nothing
        ;;
esac

feh --bg-fill --randomize "$WALLPAPER_PATH"
